<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <!-- Background -->
  <rect width="800" height="600" fill="#f8f9fa"/>
  
  <!-- School uniform illustration -->
  <g transform="translate(400, 300)">
    <!-- Shirt -->
    <path d="M-100,-150 L100,-150 L120,-50 L120,150 L-120,150 L-120,-50 Z" fill="#ffffff" stroke="#333" stroke-width="3"/>
    
    <!-- Collar -->
    <path d="M-60,-150 L0,-200 L60,-150 L0,-120 Z" fill="#0d6efd" stroke="#333" stroke-width="2"/>
    
    <!-- Pocket -->
    <rect x="40" y="-80" width="40" height="50" rx="5" fill="#ffffff" stroke="#333" stroke-width="2"/>
    
    <!-- School logo -->
    <circle cx="-50" cy="-50" r="30" fill="#ffc107" stroke="#333" stroke-width="2"/>
    <text x="-50" y="-45" font-family="Arial, sans-serif" font-size="20" font-weight="bold" text-anchor="middle" fill="#333">مدرسة</text>
    
    <!-- Buttons -->
    <circle cx="0" cy="-100" r="5" fill="#333"/>
    <circle cx="0" cy="-50" r="5" fill="#333"/>
    <circle cx="0" cy="0" r="5" fill="#333"/>
    <circle cx="0" cy="50" r="5" fill="#333"/>
    
    <!-- Sleeves -->
    <path d="M-100,-150 L-180,-50 L-150,-30 L-120,-50" fill="#ffffff" stroke="#333" stroke-width="3"/>
    <path d="M100,-150 L180,-50 L150,-30 L120,-50" fill="#ffffff" stroke="#333" stroke-width="3"/>
  </g>
  
  <!-- Text -->
  <text x="400" y="550" font-family="Arial, sans-serif" font-size="30" font-weight="bold" text-anchor="middle" fill="#333">الزي المدرسي</text>
</svg>